# NPM Registry Configuration
registry=https://registry.npmjs.org/

# Package access configuration
access=public

# Publishing configuration
publish-config-registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate

# Performance settings
prefer-offline=false
cache-max=1209600000
cache-min=86400000

# Engine strict checking
engine-strict=true

# Save exact versions in package.json
save-exact=true

# Automatically save dependencies
save=true

# Progress indicator
progress=true

# Color output
color=true

# Log level
loglevel=info

# Timing information
timing=true

# Fund messages
fund=false

# Optional dependencies
optional=true

# Development dependencies handling
dev=false

# Production flag (exclude devDependencies)
production=false

# Package-lock settings
package-lock=true
package-lock-only=false

# Shrinkwrap settings
shrinkwrap=true

# Bin links
bin-links=true

# Global style
global-style=false

# Legacy peer deps
legacy-peer-deps=false

# Strict peer deps
strict-peer-deps=false

# Node version checking
node-version-check=true

# NPM version checking
npm-version-check=true

# Update notifier
update-notifier=true

# Fetch retry settings
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-retries=2
fetch-timeout=300000

# Tag version prefix
tag-version-prefix=v

# Git tag version
git-tag-version=true

# Sign git tag
sign-git-tag=false

# Commit hooks
commit-hooks=true

# Push git commits
git-push=true

# Workspace configuration
workspaces=false

# Include workspace root
include-workspace-root=false

# Install links
install-links=false

# Ignore scripts (security)
ignore-scripts=false

# Scripts shell
script-shell=/bin/bash

# User config directory
userconfig=~/.npmrc

# Global config directory  
globalconfig=/usr/local/etc/npmrc

# Prefix for global installs
prefix=/usr/local

# Cache directory
cache=~/.npm

# Temporary directory
tmp=/tmp

# Init settings
init-author-name=pptx2pptistjson
init-author-email=ad546971975@gmail.com
init-author-url=https://github.com/Xeonice/pptx2pptistjson
init-license=MIT
init-version=1.0.0

# Note: Authentication token should be set via environment variable NPM_TOKEN
# or added manually when needed:
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}